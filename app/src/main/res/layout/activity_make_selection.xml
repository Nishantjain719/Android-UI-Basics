<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.LoginSignup.MakeSelection"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make\nSelection"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:layout_marginTop="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact detail should we use to Reset password"
            android:textSize="18sp"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:layout_marginTop="50dp"
           android:padding="10dp">

           <ImageView
               android:id="@+id/mb_icon"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:src="@drawable/mb_icon"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"/>

           <TextView
               android:id="@+id/mb_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Via sms"
               android:textColor="@color/black"
               android:textSize="20sp"
               android:textAllCaps="true"
               android:layout_toRightOf="@+id/mb_icon"
               android:layout_marginTop="30dp" />

           <TextView
               android:id="@+id/mb_desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+1234567890"
               android:textColor="@color/black"
               android:textSize="25sp"
               android:textAllCaps="true"
               android:layout_below="@+id/mb_title"
               android:layout_toRightOf="@+id/mb_icon"/>

           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#00000000"/>


       </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mail_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via Mail"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_toRightOf="@+id/mail_icon"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/mail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="support@gmail.com"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:layout_below="@+id/mail_title"
                android:layout_toRightOf="@+id/mail_icon"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>




        </RelativeLayout>
    </LinearLayout>



</ScrollView>